<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medisurf.medisurf">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".getSalt"
            android:label="Get Generic Name"></activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".OptimizeBill"
            android:label="Optimize Bill" />
        <activity
            android:name=".GetBrands"
            android:label="Get Brands" />
        <activity
            android:name=".getAlternatives"
            android:label="Get Alternatives" />
        <activity
            android:name=".saltDescription"
            android:label="About MediSurf" />
        <activity
            android:name=".Display_Salt"
            android:label="Generic Salt" />
        <activity
            android:name=".Display_Alternatives"
            android:label="Alternative Medicines" />
        <activity
            android:name=".Display_Brands"
            android:label="Brand Name" />
        <activity android:name=".Display_Bill"></activity>
    </application>

</manifest>