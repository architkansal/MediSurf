<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medisurf.medisurf.Display_Bill">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            layout="@layout/app_bar"
            android:id="@+id/app_toolbar"
            />

        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l2">


                <TextView
                    android:text="Prescribed Bill :  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/pb"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pb"
                    android:id="@+id/pb_total"
                    android:textSize="25sp"
                    android:layout_marginTop="10sp" />


                <TextView
                    android:text="Customized Bill :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pb"
                    android:layout_marginTop="10sp"
                    android:textSize="25sp"
                    android:id="@+id/ob"
                    android:layout_marginLeft="10sp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ob"
                    android:layout_below="@+id/pb_total"
                    android:layout_marginTop="10sp"
                    android:id="@+id/ob_total"
                    android:textSize="25sp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#2b282e"
                    android:layout_below="@+id/ob_total"
                    />

                <Button
                    android:text=" Send Final Selection to Us "
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ob_total"
                    android:layout_marginTop="10sp"
                    android:id="@+id/btnfeedback"
                    android:background="@color/primarycolor"
                    android:textColor="#FFFFFF"
                    />


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>