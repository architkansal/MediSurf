<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medisurf.medisurf.Display_Bill">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            layout="@layout/app_bar"
            android:id="@+id/app_toolbar"
            />

        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Prescribed Bill :  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/pb" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pb"
                    android:id="@+id/pb_total"
                    android:textSize="25sp"/>


                <TextView
                    android:text="Optimized Bill :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pb"
                    android:layout_marginTop="10sp"
                    android:textSize="25sp"
                    android:id="@+id/ob"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ob"
                    android:layout_below="@+id/pb_total"
                    android:layout_marginTop="10sp"
                    android:id="@+id/ob_total"
                    android:textSize="25sp"
                    />

                <Button
                    android:text="Send Final Selection to Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ob_total"
                    android:layout_marginLeft="58dp"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/btnfeedback" />


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>